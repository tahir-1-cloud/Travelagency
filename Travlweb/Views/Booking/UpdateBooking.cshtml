
@{
    ViewData["Title"] = "UpdateBooking";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

@model Travlweb.Models.BookingViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Form</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            padding: 20px;
        }

        .form-container {
            max-width: 800px;
            margin: 0 auto;
        }
    </style>
</head>
<body>

    <div class="form-container">
        <h2>Travel Information</h2>

        @using (Html.BeginForm("UpdateBooking", "Booking", FormMethod.Post, new { @id = "yourFormId" }))
        {
            @Html.HiddenFor(m => m.BookingId)
            <div class="row">
                <!-- First Column -->
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="firstName" class="form-label">First Name</label>
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @id = "firstName", placeholder = "Enter First Name" })
                        @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
                    </div>
                    <div class="mb-3">
                        <label for="lastName" class="form-label">Last Name</label>
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @id = "lastName", placeholder = "Enter Last Name" })
                        @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @id = "email", placeholder = "Enter Email", type = "email" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                    <div class="mb-3">
                        <label for="phoneNumber" class="form-label">Phone Number</label>
                        @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", @id = "phoneNumber", placeholder = "Enter Phone Number" })
                        @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
                    </div>
                </div>

                <!-- Second Column -->
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="gender" class="form-label">Gender</label>
                        @Html.DropDownListFor(m => m.Gender, new SelectList(new[] { "Male", "Female", "Other" }), "Select Gender", new { @class = "form-select", @id = "gender" })
                        @Html.ValidationMessageFor(m => m.Gender, "", new { @class = "text-danger" })
                    </div>
                    <div class="mb-3">
                        <label for="leavingFrom" class="form-label">Leaving From</label>
                        @Html.DropDownListFor(m => m.LeavingFrom, new SelectList(new[] { "Tirana", "Lushnje", "Elbasan", "Vlore" }, "Tirana"), new { @class = "form-select", @id = "leavingFrom" })
                        @Html.ValidationMessageFor(m => m.LeavingFrom, "", new { @class = "text-danger" })
                    </div>
                    <div class="mb-3">
                        <label for="travelingTo" class="form-label">Traveling To</label>
                        @Html.DropDownListFor(m => m.TravelingTo, new SelectList(new[] { "Germany", "France", "Netherlands", "Italy" }, "Germany"), new { @class = "form-select", @id = "travelingTo" })
                        @Html.ValidationMessageFor(m => m.TravelingTo, "", new { @class = "text-danger" })
                    </div>
                    <div class="mb-3">
                        <label for="numberOfPersons" class="form-label">Number of Persons</label>
                        @Html.TextBoxFor(m => m.NumberOfPersons, new { @class = "form-control", @id = "numberOfPersons", placeholder = "Enter Number of Persons", type = "number" })
                        @Html.ValidationMessageFor(m => m.NumberOfPersons, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        }

    </div>

    <!-- Bootstrap JS and Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
</body>
</html>
