@{
    Layout = null;
}

@model Travlweb.Models.LoginDto
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" href="~/css/login.css">
    <style>
        .navbar-buttons {
            display: flex; /* Arrange buttons in a row */
            gap: 15px; /* Add spacing between buttons */
        }

        .navbar-link {
            text-decoration: none !important; /* Remove underline */
            padding: 10px 20px; /* Add padding for button look */
            border: 1px solid transparent; /* Optional border */
            border-radius: 5px; /* Rounded corners */
            font-size: 16px; /* Adjust font size */
            color: white !important; /* Text color */
            background-color: #007bff !important; /* Default button color */
            transition: background-color 0.3s, color 0.3s; /* Smooth hover effect */
        }

            .navbar-link:hover {
                background-color: #0056b3 !important; /* Change color on hover */
                color: #ffffff !important; /* Text color on hover */
                border: 1px solid #ffffff !important; /* Optional border on hover */
            }

        .btn-primary {
            background-color: #007bff !important; /* Primary button color */
        }

            .btn-primary:hover {
                background-color: #0056b3 !important; /* Hover effect for primary button */
            }

        .btn-secondary {
            background-color: #6c757d !important; /* Secondary button color */
        }

            .btn-secondary:hover {
                background-color: #5a6268 !important; /* Hover effect for secondary button */
            }

        .register {
            text-align: center; /* Center-align the button */
            margin-top: 15px !important; /* Add space above the button */
        }

            .register .btn {
                display: inline-block; /* Ensure button behaves properly */
                text-decoration: none !important; /* Remove underline */
                padding: 10px 20px; /* Add padding for button look */
                border: 1px solid transparent; /* Optional border */
                border-radius: 5px; /* Rounded corners */
                font-size: 16px; /* Adjust font size */
                color: white !important; /* Text color */
                background-color: #6c757d !important; /* Default button color */
                transition: background-color 0.3s, color 0.3s; /* Smooth hover effect */
            }

                .register .btn:hover {
                    background-color: #5a6268 !important; /* Change color on hover */
                    color: #ffffff !important; /* Text color on hover */
                }

    </style>
</head>
<body>
    <div class="mainContainer">

        <div class="leftImage">
            <img class="firstImage" src="/assets/login.png" alt="Travel Image">
        </div>
        <div class="rightContainer">
            <div class="navbar-buttons">
                <a href="@Url.Action("Index", "Home")" class="btn btn-primary navbar-link" data-nav-link>Home</a>
                <a href="@Url.Action("Registration", "User")" class="btn btn-secondary navbar-link" data-nav-link>Sign Up</a>
            </div>

            <h3>Please Login</h3>
            @using (Html.BeginForm("Login", "User", FormMethod.Post, new { id = "loginForm" }))
            {
                <div class="mb-3">
                    <label for="Email" class="form-label">Email</label>
                    <div class="input-container">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Enter your email", type = "email", @required = "required" })
                        <img class="input-icon" src="~/assets/email-icon.png" alt="Email Icon" />
                    </div>
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger small" })
                </div>

                <div class="mb-3">
                    <label for="Password" class="form-label">Password</label>
                    <div class="input-container">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Enter your password", autocomplete = "current-password", @required = "required" })
                        <img class="input-icon2" src="~/assets/password-hide.png" alt="Password Icon" />
                    </div>
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger small" })
                </div>              
                <br />
                <button type="submit" class="btn btn-primary w-100">Log In</button>
                <br />
                <div class="register">
                    <a href="@Url.Action("Registration", "User")" class="btn btn-secondary">Create An Account</a>
                </div>
            }
        </div>
    </div>
    @section Scripts {
        <!-- Include Unobtrusive Validation Scripts -->
        <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.13/dist/jquery.validate.unobtrusive.min.js"></script>
    }
</body>
</html>


